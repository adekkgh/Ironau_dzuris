@model UserViewModel

@await Html.PartialAsync("_ProfileStyles");



<div class="text-center">
    <div class="profile-card">
        <img class="profile-card__image" src="~/images/pfp-icon.jpg" />
        <div class="profile-card__info">
            <div class="profile-card__info-name">
                <h3>@Model.Name <span>@Model.Id</span></h3>
            </div>
            <div class="profile-card__info-email">
                <h5>Электронная почта</h5>
                <p>@Model.Email</p>
            </div>
            <div class="profile-card__info-buttons">
                <a class="btn edit-email-button" asp-controller="Profile" asp-action="ChangeEmailView">Изменить email</a>
                <a class="btn edit-password-button" asp-controller="Profile" asp-action="ChangePasswordView">Изменить пароль</a>
                @* <a class="delete-button">Удалить аккаунт</a> *@
            </div>
        </div>
    </div>
</div>